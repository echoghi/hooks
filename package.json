{
    "name": "@echoghi/hooks",
    "version": "1.3.0",
    "description": "",
    "keywords": [
        "react",
        "react-dom",
        "hooks",
        "react-hooks"
    ],
    "main": "index.js",
    "scripts": {
        "test": "jest",
        "clean": "rimraf *js",
        "build": "yarn clean && cross-env NODE_ENV=production  babel ./src --out-dir .",
        "prepare": "yarn build",
        "deploy": "np"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/echoghi/hooks.git"
    },
    "author": "Emile Choghi <emchoghi@gmail.com> (https://emilechoghi.com/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/echoghi/hooks/issues"
    },
    "homepage": "https://github.com/echoghi/hooks#readme",
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "jest": {
        "setupFilesAfterEnv": [
            "<rootDir>/tests/jest.setup.js",
            "<rootDir>/tests/localStorage.js"
        ],
        "testRegex": "test.js$",
        "moduleDirectories": [
            "./node_modules",
            "./src"
        ],
        "moduleFileExtensions": [
            "js",
            "jsx"
        ],
        "transform": {
            "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
        }
    },
    "peerDependencies": {
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "devDependencies": {
        "@babel/cli": "7.8.4",
        "@babel/core": "7.9.6",
        "@babel/preset-env": "7.9.6",
        "@babel/preset-react": "7.9.4",
        "@testing-library/jest-dom": "5.8.0",
        "@testing-library/react": "10.0.4",
        "babel-jest": "26.0.1",
        "cross-env": "7.0.2",
        "jest": "26.0.1",
        "np": "6.2.3",
        "prettier": "2.0.5",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "rimraf": "3.0.2"
    },
    "dependencies": {}
}
